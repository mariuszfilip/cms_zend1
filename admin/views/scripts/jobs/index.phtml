function initColorbox(link){
	$('#ajaxForm').load(link, function(){
		$.colorbox({
			inline: true,
			href: '.ajaxWrapper',
			width: '70%',
			onComplete: function(){
				$('.ajaxWrapper select, .ajaxWrapper input:checkbox').uniform();
				$('.closeLb').click(function(event){
					event.preventDefault();
					$.colorbox.close();
				});
			}
		});
	});
}
